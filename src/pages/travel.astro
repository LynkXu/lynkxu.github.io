---
import Base from '../layouts/Base.astro';
import SimpleHeader from '../components/SimpleHeader.astro';

const places = [
  // 获取经纬度的方法：
  // 1. Google Maps: 右键点击地点，第一项就是"纬度, 经度" (例如: 39.9042, 116.4074)
  // 2. 高德地图坐标拾取器: https://lbs.amap.com/tools/picker
  // 3. 百度地图坐标拾取系统: https://api.map.baidu.com/lbsapi/getpoint/index.html
  // 注意：国内地图坐标(GCJ-02/BD-09)与国际坐标(WGS-84)有细微偏差，Leaflet 使用国际标准坐标，
  // 直接使用 Google Maps 的坐标最准确。如果使用高德/百度坐标，可能会有几百米的偏移，但在世界地图尺度上通常可接受。
  
  { name: '上海', lat: 31.2304, lng: 121.4737, date: '2020 - 至今', status: 'living' },
  { name: '六安', lat: 31.73, lng: 116.43, date: '1998', status: 'hometown' },
  { name: '扬州', lat: 32.39, lng: 119.41, date: '2025-10' },
  { name: '常州', lat: 31.81, lng: 119.97, date: '2025-10' },
  { name: '香港', lat: 22.28, lng: 114.17, date: '2025-05' },
  { name: '深圳', lat: 22.5431, lng: 114.0579, date: '2025-05' },
  { name: '济州岛', lat: 33.50, lng: 126.518, date: '2025-05' },
  { name: '休斯顿', lat: 29.97, lng: -95.689, date: '2025-02' },
  { name: '南京', lat: 32.06, lng: 118.80, date: '2024-10' },
  { name: '绍兴', lat: 30.05, lng: 120.58, date: '2024-07' },
  { name: '黄山', lat: 30.14, lng: 118.16, date: '2024-07' },
  { name: '长沙', lat: 28.23, lng: 112.94, date: '2024-06' },
  { name: '千岛湖', lat: 29.59, lng: 119.01, date: '2024-05' },
  { name: '平潭', lat:25.50, lng: 119.79, date: '2023-10' },
  { name: '厦门', lat: 24.48, lng: 118.09, date: '2023-10' },
  { name: '武汉', lat: 30.59, lng: 114.30, date: '2023-08' },
  { name: '西双版纳', lat: 22.01, lng: 100.80, date: '2023-02' },
  { name: '大理', lat: 25.68, lng: 100.30, date: '2023-02' },
  { name: '丽江', lat: 26.87, lng:100.24, date: '2023-02' },
  { name: '湖州', lat: 30.89, lng:120.09, date: '2023-01' },
  { name: '杭州', lat: 30.2741, lng: 120.1551, date: '2021-06' },
  { name: '宜春', lat: 28.10, lng: 114.08, date: '2017-12' },
  { name: '烟台', lat: 37.46, lng: 121.45, date: '2015-12' },
  { name: '青岛', lat: 36.06, lng: 120.31, date: '2015-09' },
];

// Helper to extract date value for sorting
const getDateVal = (d: string) => {
    const match = d.match(/\d{4}([-.]\d{2})?/);
    return match ? match[0].replace('.', '-') : '';
};

// 1. Separate Special (Living/Hometown) vs Visited
const specialPlaces = places.filter(p => p.status === 'living' || p.status === 'hometown');
const visitedPlaces = places.filter(p => !p.status);

// Sort special places: Hometown first, then Living
specialPlaces.sort((a, b) => {
    if (a.status === 'hometown' && b.status !== 'hometown') return -1;
    if (b.status === 'hometown' && a.status !== 'hometown') return 1;
    return 0;
});

// 2. Sort visited places by date descending first
visitedPlaces.sort((a, b) => getDateVal(b.date).localeCompare(getDateVal(a.date)));

// 3. Group by Year
const placesByYear = visitedPlaces.reduce((acc, place) => {
    const yearMatch = place.date.match(/\d{4}/);
    const year = yearMatch ? yearMatch[0] : '其他';
    if (!acc[year]) acc[year] = [];
    acc[year].push(place);
    return acc;
}, {} as Record<string, typeof places>);

// 4. Get sorted years
const sortedYears = Object.keys(placesByYear).sort((a, b) => b.localeCompare(a));

const title = "旅行足迹";
const description = "读万卷书，行万里路";
---

<Base title={title} description={description} fullWidth={true} hideHeader={true} useCard={false} className="layout-wide travel-page">
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" slot="head" />
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin="" slot="head"></script>

  <div class="travel-container">
    
    <!-- Header overlay on top of map -->
    <div class="header-overlay">
        <SimpleHeader title="Travel" className="transparent-header" />
    </div>

    <!-- 全屏地图作为背景的一部分 -->
    <div class="map-section">
        <div class="map-overlay top"></div>
        <div id="map"></div>
        <div class="map-overlay bottom"></div>
    </div>
    
    <div class="content-wrapper">
        <div class="places-list">
            
            {specialPlaces.length > 0 && (
                <div class="year-section">
                    <h2 class="year-title">常驻 & 老家</h2>
                    <div class="places-grid">
                        {specialPlaces.map(place => (
                            <div class="place-card" data-lat={place.lat} data-lng={place.lng}>
                                <div class="place-header">
                                    <h3>
                                        {place.name}
                                        {place.status === 'living' && <span class="living-badge">Current</span>}
                                        {place.status === 'hometown' && <span class="hometown-badge">Hometown</span>}
                                    </h3>
                                    <span class="date">{place.date}</span>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            )}

            {sortedYears.map(year => (
                <div class="year-section">
                    <h2 class="year-title">{year}</h2>
                    <div class="places-grid">
                        {placesByYear[year].map(place => (
                            <div class="place-card" data-lat={place.lat} data-lng={place.lng}>
                                <div class="place-header">
                                    <h3>{place.name}</h3>
                                    <span class="date">{place.date}</span>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            ))}

        </div>
    </div>
  </div>

  <style>
    :global(body.full-width .global-layout-transparent.travel-page) {
        max-width: 100%;
    }

    .travel-container {
        display: flex;
        flex-direction: column;
        width: 100%;
        position: relative;
    }
    
    .header-overlay {
        position: relative;
        width: 100%;
        z-index: 10;
        background: var(--page-bg);
    }
    
    :global([data-theme='dark']) .header-overlay {
        background: var(--page-bg);
    }
    
    /* Map Section - Immersive */
    .map-section {
        height: 60vh;
        width: 100%;
        position: relative;
        z-index: 1;
        /* 移除之前的阴影，让它融入 */
    }
    
    #map {
        height: 100%;
        width: 100%;
        background: #e5e5e5; /* Neutral gray while loading */
        z-index: 1;
    }
    
    /* Gradient overlay to blend map into content */
    .map-overlay {
        position: absolute;
        left: 0;
        width: 100%;
        height: 80px; /* Increased for smoother transition */
        z-index: 2;
        pointer-events: none;
    }

    .map-overlay.bottom {
        bottom: 0;
        background: linear-gradient(to bottom, transparent, var(--page-bg));
    }

    .map-overlay.top {
        top: 0;
        background: linear-gradient(to bottom, var(--page-bg), transparent);
    }

    .content-wrapper {
        position: relative;
        z-index: 2;
        padding: 4rem 0 4rem; /* padding 移动到内部，增加顶部 padding 替代 header */
        width: 100%;
        margin: 0;
        /* Ensure background matches main content to avoid transparency issues over map edges */
        background-color: var(--page-bg); 
        min-height: 50vh;
    }

    .travel-header {
        text-align: center;
        margin: 0;
        padding: 3rem 2rem 4rem;
        position: relative;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
    }
    
    .travel-header h1 {
        font-family: var(--serif-font);
        font-size: 2.5rem;
        font-weight: bold;
        color: var(--heading-color);
        margin: 0;
    }

    .places-list {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem; /* 增加 padding 防止紧贴边缘 */
    }

    .year-section {
        margin-bottom: 4rem;
        position: relative;
    }

    .year-title {
        font-family: var(--serif-font);
        font-size: 2rem;
        font-weight: bold;
        color: var(--heading-color);
        opacity: 0.15;
        position: relative;
        left: 0;
        top: 0;
        z-index: 0;
        pointer-events: none;
        border-left: none;
        padding-left: 0;
        margin-bottom: 0.5rem;
        display: block;
        width: 100%;
    }

    .year-section {
        margin-bottom: 2.5rem;
        position: relative;
    }

    .places-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
        gap: 1rem;
        position: relative;
        z-index: 1;
    }

    /* Card Styles - Refined */
    .place-card {
        background: rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        padding: 0.4rem 0.3rem;
        border-radius: 4px;
        border: 1px solid rgba(0, 0, 0, 0.03);
        transition: all 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
        position: relative;
        cursor: pointer;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    :global([data-theme='dark']) .place-card {
        background: rgba(255, 255, 255, 0.03);
        border-color: rgba(255, 255, 255, 0.05);
    }

    .place-card:hover {
        transform: translateY(-4px);
        background: rgba(255, 255, 255, 0.8);
        box-shadow: 0 10px 30px rgba(0,0,0,0.06);
        border-color: rgba(0,0,0,0.06);
    }

    :global([data-theme='dark']) .place-card:hover {
        background: rgba(255, 255, 255, 0.08);
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        border-color: rgba(255, 255, 255, 0.1);
    }

    .place-header {
        width: 100%;
    }

    .place-header h3 {
        font-family: var(--serif-font);
        font-size: 0.9rem;
        margin-bottom: 0.1rem;
        font-weight: 600;
        letter-spacing: 0.02em;
        line-height: 1.2;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 4px;
    }

    .date {
        font-size: 0.7rem;
        color: var(--gray-color);
        font-feature-settings: "tnum";
        font-variant-numeric: tabular-nums;
        opacity: 0.8;
        display: block;
    }

    .living-badge, .hometown-badge {
        font-size: 0.5rem;
        padding: 1px 4px;
        border-radius: 3px;
        margin-left: 0;
        font-weight: 600;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        line-height: 1;
    }

    .living-badge {
        background: #e6f7ff;
        color: #0077b6;
        border: 1px solid rgba(0, 119, 182, 0.2);
    }
    
    :global([data-theme='dark']) .living-badge {
        background: rgba(0, 119, 182, 0.3);
        color: #4fc3f7;
        border-color: rgba(79, 195, 247, 0.3);
    }

    .hometown-badge {
        background: #fff7e6;
        color: #d46b08;
        border: 1px solid rgba(212, 107, 8, 0.2);
    }
    
    :global([data-theme='dark']) .hometown-badge {
        background: rgba(212, 107, 8, 0.3);
        color: #ffbb96;
        border-color: rgba(255, 187, 150, 0.3);
    }

    .place-card p {
        margin: 0;
        font-size: 0.9rem;
        color: var(--text-color);
        opacity: 0.9;
        line-height: 1.4;
    }

    @media (max-width: 600px) {
        .header-wrapper {
            padding: 1rem;
        }
    }
  </style>

  <script define:vars={{ places }}>
    function initMap() {
        if (!window.L) return;

        // Prevent double initialization
        const container = document.getElementById('map');
        if (!container || container._leaflet_id) return;

        // Fix default marker icons
        delete L.Icon.Default.prototype._getIconUrl;
        L.Icon.Default.mergeOptions({
            iconRetinaUrl: 'https://unpkg.com/leaflet@1.9.4/dist/images/marker-icon-2x.png',
            iconUrl: 'https://unpkg.com/leaflet@1.9.4/dist/images/marker-icon.png',
            shadowUrl: 'https://unpkg.com/leaflet@1.9.4/dist/images/marker-shadow.png',
        });

        // Initialize map centered on China
        const map = L.map('map').setView([35.8617, 104.1954], 4);

        // Use CartoDB Positron for better aesthetics and reliability
        L.tileLayer('https://{s}.basemaps.cartocdn.com/rastertiles/voyager/{z}/{x}/{y}{r}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors &copy; <a href="https://carto.com/attributions">CARTO</a>',
            maxZoom: 19
        }).addTo(map);

        const markers = [];

        places.forEach(place => {
            const marker = L.marker([place.lat, place.lng]).addTo(map);
            marker.bindPopup(`<b>${place.name}</b><br><small>${place.date}</small>`);
            
            // Highlight resident/hometown places
            if (place.status === 'living' && marker._icon) {
                marker._icon.classList.add('resident-marker');
            } else if (place.status === 'hometown' && marker._icon) {
                marker._icon.classList.add('hometown-marker');
            }

            markers.push({
                marker: marker,
                lat: place.lat,
                lng: place.lng
            });
        });

        // Add click listeners to cards
        const cards = document.querySelectorAll('.place-card');
        cards.forEach(card => {
            card.addEventListener('click', () => {
                const lat = parseFloat(card.dataset.lat);
                const lng = parseFloat(card.dataset.lng);
                map.flyTo([lat, lng], 10);
                
                // Find and open popup
                const target = markers.find(m => Math.abs(m.lat - lat) < 0.0001 && Math.abs(m.lng - lng) < 0.0001);
                if (target) {
                    target.marker.openPopup();
                }
            });
        });
        
        // Handle window resize
        window.addEventListener('resize', () => {
            map.invalidateSize();
        });
    }

    // Ensure Leaflet is loaded
    if (typeof L !== 'undefined') {
        initMap();
    } else {
        // Wait for script to load
        const script = document.querySelector('script[src*="leaflet.js"]');
        if (script) {
            script.addEventListener('load', initMap);
        }
    }
    
    // Fallback for DOMContentLoaded if script loaded but DOM not ready
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => {
            if (typeof L !== 'undefined') initMap();
        });
    }
  </script>
</Base>
