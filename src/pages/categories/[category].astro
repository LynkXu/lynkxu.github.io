---
import { getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';
import FormattedDate from '../../components/FormattedDate.astro';

export async function getStaticPaths() {
	const allPosts = (await getCollection('blog')).filter((post) => !post.data.draft);
	const categories = new Set<string>();

	// 收集所有分类
	allPosts.forEach((post) => {
		if (post.data.categories) {
			post.data.categories.forEach((category) => categories.add(category));
		}
	});

	// 为每个分类创建页面
	return Array.from(categories).map((category) => {
		const filteredPosts = allPosts
			.filter((post) => post.data.categories && post.data.categories.includes(category))
			.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

		return {
			params: { category },
			props: { posts: filteredPosts, category },
		};
	});
}

const { posts, category } = Astro.props;
---

<Base title={`分类：${category}`} description={`分类 "${category}" 下的所有文章`}>
	<h2>分类：{category}</h2>
	<p>共 {posts.length} 篇文章</p>
	<ul class='posts'>
		{
			posts.map((post) => (
				<li>
					<span>
						<FormattedDate date={post.data.pubDate} />
					</span>
					<div>
						<a href={`/blog/${post.id}.html`} transition:name={`post-title-${post.id}`}>
							{post.data.title}
						</a>
					</div>
				</li>
			))
		}
	</ul>

</Base>
