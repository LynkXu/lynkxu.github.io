---
import Base from './Base.astro';
import SimpleHeader from '../components/SimpleHeader.astro';

const { title } = Astro.props;
---

<Base title={title} description="运动记录" fullWidth={true} hideHeader={true} useCard={false}>
  <SimpleHeader title="Sports" description="运动记录" />
  <div class="sports-layout">
    
    <div class="content">
      <slot />
    </div>
  </div>

  <style>
    .sports-layout {
        width: 100%;
        max-width: 1400px; /* Optimized width */
        margin: 0 auto;
        padding: 0 40px; /* Added side padding */
    }

    .page-title {
        text-align: center;
        margin: 2rem 0 3rem;
    }
    
    .page-title h1 {
        font-family: var(--serif-font);
        font-size: 2rem;
        margin: 0;
    }

    /* 内容区域样式调整，使其在无 Hero 模式下更紧凑 */
    .content {
      margin-top: 1rem;
    }
  </style>
</Base>

