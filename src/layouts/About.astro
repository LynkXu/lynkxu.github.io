	<style>
		/* Profile Header â€” æ–‡å­—å·¦ å¤´åƒå³ */
		.profile-header {
			display: flex;
			align-items: center;
			justify-content: space-between;
			gap: 1.25rem;
			margin: 1.5rem 0 1.5rem;
		}

		.profile-avatar {
			width: 82px;
			height: 82px;
			object-fit: cover;
			flex-shrink: 0;
		}

		.profile-info {
			display: flex;
			flex-direction: column;
			gap: 0.25rem;
		}

		.about-title {
			font-size: 1.17em;
			font-weight: bold;
			margin: 0;
		}

		.profile-greeting {
			margin: 0;
			font-size: 0.95rem;
			color: var(--text-color);
			line-height: 1.5;
		}

		.profile-desc {
			margin: 0;
			font-size: 0.84rem;
			color: var(--gray-color);
			letter-spacing: 0.01em;
		}

		/* ç§»åŠ¨ç«¯ï¼šå±…ä¸­å †å  */
		@media (max-width: 520px) {
			.profile-header {
				flex-direction: column-reverse;
				align-items: center;
				text-align: center;
				gap: 0.75rem;
			}

			.profile-avatar {
				width: 72px;
				height: 72px;
			}

			.profile-info {
				align-items: center;
			}
		}

		.about-page :global(h3) {
			margin-top: 1.8rem;
			margin-bottom: 0.6rem;
		}

		/* çˆ±å¥½æ ‡ç­¾ */
		.about-page :global(.hobby-list) {
			display: flex;
			flex-wrap: wrap;
			gap: 0.4rem;
			margin: 1rem 0;
		}

		.about-page :global(.hobby) {
			display: inline-block;
			padding: 0.3rem 0.65rem;
			font-size: 0.85rem;
			border-radius: 0;
			background: transparent;
			border: 1px solid rgba(0, 0, 0, 0.12);
			color: var(--text-color);
			transition: border-color 0.15s;
		}

		.about-page :global(.hobby:hover) {
			border-color: rgba(0, 0, 0, 0.3);
		}

		.about-page :global(.hobby.inactive) {
			text-decoration: line-through;
			opacity: 0.4;
		}

		:global([data-theme='dark']) .about-page :global(.hobby) {
			border-color: rgba(255, 255, 255, 0.15);
		}

		:global([data-theme='dark']) .about-page :global(.hobby:hover) {
			border-color: rgba(255, 255, 255, 0.35);
		}

		/* æ›´å¤šå¯¼èˆª â€” ç½‘æ ¼å¸ƒå±€ */
		.about-page :global(.more-nav) {
			display: grid;
			grid-template-columns: repeat(3, 1fr);
			gap: 0.5rem;
			margin: 0.5rem 0;
		}

		.about-page :global(.more-nav a) {
			display: flex;
			align-items: center;
			justify-content: center;
			padding: 0.5rem 0.6rem;
			font-size: 0.88rem;
			color: var(--text-color) !important;
			text-decoration: none !important;
			border: 1px solid rgba(0, 0, 0, 0.08);
			border-bottom: 1px solid rgba(0, 0, 0, 0.08) !important;
			transition: border-color 0.15s, background 0.15s;
			white-space: nowrap;
		}

		.about-page :global(.more-nav a:hover) {
			border-color: rgba(0, 0, 0, 0.25);
			border-bottom-color: rgba(0, 0, 0, 0.25) !important;
			background: rgba(0, 0, 0, 0.02);
		}

		:global([data-theme='dark']) .about-page :global(.more-nav a) {
			border-color: rgba(255, 255, 255, 0.1);
			border-bottom-color: rgba(255, 255, 255, 0.1) !important;
		}

		:global([data-theme='dark']) .about-page :global(.more-nav a:hover) {
			border-color: rgba(255, 255, 255, 0.25);
			border-bottom-color: rgba(255, 255, 255, 0.25) !important;
			background: rgba(255, 255, 255, 0.03);
		}

		@media (max-width: 520px) {
			.about-page :global(.more-nav) {
				grid-template-columns: repeat(2, 1fr);
			}
		}

		/* è”ç³»æ–¹å¼åˆ—è¡¨ */
		.about-page :global(.contact-list) {
			display: flex;
			flex-direction: column;
			gap: 0.5rem;
			margin: 0.5rem 0;
		}

		.about-page :global(.contact-item) {
			display: flex;
			align-items: baseline;
		}

		.about-page :global(.contact-label) {
			width: 70px;
			flex-shrink: 0;
			font-size: 0.85rem;
			color: var(--gray-color);
		}

		.about-page :global(.contact-item a) {
			font-size: 0.95rem;
			color: var(--text-color);
			text-decoration: none;
			border-bottom: 1px dashed transparent;
			transition: border-color 0.2s;
		}

		.about-page :global(.contact-item a:hover) {
			border-bottom-color: var(--gray-color);
		}

		/* å†å²æŠ˜å  */
		.about-page :global(.history-fold) {
			margin: 0.8rem 0;
			background: rgba(0, 0, 0, 0.02);
			border: none;
			border-radius: 0;
			overflow: hidden;
			margin-bottom: 0.4rem;
		}

		:global([data-theme='dark']) .about-page :global(.history-fold) {
			border-color: transparent;
			background: rgba(255, 255, 255, 0.03);
		}

		.about-page :global(.history-fold summary) {
			padding: 0.5rem 0.75rem;
			cursor: pointer;
			font-size: 0.8rem;
			list-style: none;
			transition: background 0.2s;
			font-weight: 500;
			color: var(--text-color);
		}

		.about-page :global(.history-fold summary:hover) {
			background: rgba(0, 0, 0, 0.02);
		}

		:global([data-theme='dark']) .about-page :global(.history-fold summary:hover) {
			background: rgba(255, 255, 255, 0.03);
		}

		.about-page :global(.history-fold summary::-webkit-details-marker) {
			display: none;
		}

		.about-page :global(.history-fold summary::before) {
			content: 'â–¸ ';
			font-size: 0.8em;
			color: var(--gray-color);
			margin-right: 0.25rem;
		}

		.about-page :global(.history-fold[open] summary::before) {
			content: 'â–¾ ';
		}

		.about-page :global(.history-fold[open] summary) {
			border-bottom: none;
		}

		:global([data-theme='dark']) .about-page :global(.history-fold[open] summary) {
			border-bottom-color: transparent;
		}

		/* æ–°å¢å†…å®¹å®¹å™¨æ ·å¼ */
		.about-page :global(.history-content) {
			padding: 0.75rem;
		}

		.about-page :global(.history-content p) {
			margin: 0 0 0.8rem;
			font-size: 0.85rem;
			line-height: 1.6;
			color: var(--text-color);
		}

		.about-page :global(.history-tags) {
			display: flex;
			flex-wrap: wrap;
			gap: 0.4rem;
		}

		.about-page :global(.history-tags span) {
			display: inline-block;
			padding: 0.25rem 0.6rem;
			background: rgba(0, 0, 0, 0.04);
			border-radius: 0;
			font-size: 0.8rem;
			color: var(--gray-color);
		}

		:global([data-theme='dark']) .about-page :global(.history-tags span) {
			background: rgba(255, 255, 255, 0.06);
		}

		/* åº•éƒ¨å¼±åŒ–åŒºåŸŸ */
		.about-page :global(.about-footer) {
			margin-top: 3rem;
			padding-top: 1.5rem;
			border-top: 1px dashed rgba(0, 0, 0, 0.1);
			font-size: 0.9rem;
			color: var(--gray-color);
		}

		:global([data-theme='dark']) .about-page :global(.about-footer) {
			border-top-color: rgba(255, 255, 255, 0.1);
		}

		.about-page :global(.footer-section) {
			margin-bottom: 1.5rem;
		}

		.about-page :global(.footer-label) {
			display: block;
			font-size: 0.75rem;
			text-transform: uppercase;
			letter-spacing: 0.05em;
			font-weight: 600;
			color: var(--text-color);
			margin-bottom: 0.5rem;
		}
		
		.about-page :global(.footer-section p) {
			margin: 0.2rem 0 0.5rem;
			line-height: 1.6;
		}

		/* è°ƒæ•´ Sponsor ç»„ä»¶åœ¨ footer é‡Œçš„æ ·å¼å¾®è°ƒ */
		.about-page :global(.about-footer .sponsor-about) {
			margin-top: 0.2rem;
			margin-bottom: 0.5rem;
		}
	</style>
</Base>
