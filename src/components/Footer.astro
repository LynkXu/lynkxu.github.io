<style>
	footer {
		padding: 1.5rem 0;
        width: 100%; /* Ensure footer takes full width */
	}

    /* Fix for full-width layout pages */
    :global(body.full-width) footer {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1.5rem 2rem; /* Add padding for full-width layout */
        box-sizing: border-box;
    }

	.footer-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 1rem;
	}

	.copyright {
		color: var(--gray-color);
		font-size: 0.9rem;
	}

	.copyright a {
		color: var(--gray-color);
		text-decoration: none;
		border-bottom: 1px solid transparent;
		transition: border-color 0.2s;
	}

	.copyright a:hover {
		border-bottom-color: var(--gray-color);
	}

	.social-links {
		display: flex;
		gap: 1rem;
	}

	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--gray-color);
		opacity: 0.6;
		transition: opacity 0.2s, color 0.2s;
	}

	.social-links a:hover {
		opacity: 1;
		color: var(--text-color);
		border-bottom: none;
	}

	.social-links svg {
		display: block;
	}

	@media (max-width: 480px) {
		.footer-content {
			flex-direction: column;
			text-align: center;
		}
	}
</style>
