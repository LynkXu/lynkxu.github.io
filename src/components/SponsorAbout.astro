---
import { SPONSOR_GROUPS } from './sponsorConfig';
---

<div class="sponsor-about">
	<details class="sponsor-fold">
		<summary>微信 / 支付宝</summary>
		<div class="sponsor-grid sponsor-grid--2">
			{SPONSOR_GROUPS.find((g) => g.name === 'CNY')?.items.map((item) => (
				<div class="sponsor-card">
					<div class="sponsor-card__name">{item.name}</div>
					<div class="sponsor-card__qr">
						<img src={item.image} alt={`${item.name} 收款码`} loading="lazy" />
					</div>
				</div>
			))}
		</div>
	</details>

	<details class="sponsor-fold">
		<summary>Crypto</summary>
		<div class="sponsor-grid sponsor-grid--3">
			{SPONSOR_GROUPS.find((g) => g.name === 'Crypto')?.items.map((item) => (
				<div class="sponsor-card">
					<div class="sponsor-card__name">{item.name}</div>
					{item.desc && <div class="sponsor-card__desc">{item.desc}</div>}
					<div class="sponsor-card__qr">
						<img src={item.image} alt={`${item.name} QR`} loading="lazy" />
					</div>
					{item.address && (
						<div class="sponsor-card__addr">
							<code class="addr-text">{item.address}</code>
							<button class="addr-copy" type="button" data-clipboard-text={item.address} aria-label="复制地址">
								<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="0" ry="0"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>
							</button>
						</div>
					)}
				</div>
			))}
		</div>
	</details>
</div>

<style>
	.sponsor-about {
		margin: 0.5rem 0 1rem;
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	/* Fold */
	.sponsor-fold {
		background: rgba(0, 0, 0, 0.012);
		border: none;
		border-radius: 0;
		overflow: hidden;
		margin-bottom: 0.4rem;
	}

	:global([data-theme='dark']) .sponsor-fold {
		border-color: transparent;
		background: rgba(255, 255, 255, 0.02);
	}

	.sponsor-fold summary {
		padding: 0.5rem 0.75rem;
		cursor: pointer;
		font-size: 0.8rem;
		font-weight: 500;
		color: var(--text-color);
		list-style: none;
		transition: background 0.15s;
	}

	.sponsor-fold summary::-webkit-details-marker {
		display: none;
	}

	.sponsor-fold summary::before {
		content: '▸ ';
		font-size: 0.75em;
		color: var(--gray-color);
		margin-right: 0.25rem;
	}

	.sponsor-fold[open] summary::before {
		content: '▾ ';
	}

	.sponsor-fold summary:hover {
		background: rgba(0, 0, 0, 0.02);
	}

	:global([data-theme='dark']) .sponsor-fold summary:hover {
		background: rgba(255, 255, 255, 0.03);
	}

	.sponsor-fold[open] summary {
		border-bottom: none;
	}

	:global([data-theme='dark']) .sponsor-fold[open] summary {
		border-bottom-color: transparent;
	}

	/* Grid */
	.sponsor-grid {
		display: grid;
		gap: 0.6rem;
		padding: 0.75rem;
	}

	.sponsor-grid--2 {
		grid-template-columns: repeat(2, 1fr);
	}

	.sponsor-grid--3 {
		grid-template-columns: repeat(3, 1fr);
	}

	@media (max-width: 600px) {
		.sponsor-grid--3 {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 400px) {
		.sponsor-grid--2,
		.sponsor-grid--3 {
			grid-template-columns: 1fr;
		}
	}

	/* Card */
	.sponsor-card {
		background: rgba(255, 255, 255, 0.5);
		border: 1px solid rgba(0, 0, 0, 0.04);
		border-radius: 0;
		padding: 0.55rem;
	}

	:global([data-theme='dark']) .sponsor-card {
		background: rgba(0, 0, 0, 0.15);
		border-color: rgba(255, 255, 255, 0.06);
	}

	.sponsor-card__name {
		font-weight: 500;
		font-size: 0.82rem;
		color: var(--heading-color);
		margin-bottom: 0.35rem;
	}

	.sponsor-card__desc {
		font-size: 0.72rem;
		color: var(--gray-color);
		margin-bottom: 0.3rem;
		line-height: 1.3;
	}

	.sponsor-card__qr {
		background: #fff;
		border-radius: 0;
		padding: 0.25rem;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.sponsor-card__qr img {
		width: 100px;
		height: 100px;
		object-fit: contain;
		margin: 0;
		display: block;
	}

	/* Address */
	.sponsor-card__addr {
		margin-top: 0.4rem;
		display: flex;
		align-items: flex-start;
		gap: 0.35rem;
	}

	.addr-text {
		flex: 1;
		font-size: 0.68rem;
		padding: 0.2rem 0.35rem;
		border-radius: 0;
		background: rgba(0, 0, 0, 0.04);
		word-break: break-all;
		line-height: 1.4;
	}

	:global([data-theme='dark']) .addr-text {
		background: rgba(255, 255, 255, 0.05);
	}

	.addr-copy {
		flex-shrink: 0;
		padding: 0.2rem;
		background: none;
		border: 1px solid rgba(0, 0, 0, 0.1);
		border-radius: 0;
		color: var(--gray-color);
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: all 0.15s;
	}

	:global([data-theme='dark']) .addr-copy {
		border-color: rgba(255, 255, 255, 0.12);
	}

	.addr-copy:hover {
		color: var(--text-color);
		border-color: var(--text-color);
	}

	.addr-copy svg {
		display: block;
	}
</style>

<script>
	function initSponsorCopy() {
		const root = document.querySelector('.sponsor-about');
		if (!root) return;

		const copyBtns = root.querySelectorAll('.addr-copy');
		copyBtns.forEach((btn) => {
			btn.addEventListener('click', async () => {
				const text = btn.getAttribute('data-clipboard-text');
				if (!text) return;
				try {
					await navigator.clipboard.writeText(text);
					const oldHtml = btn.innerHTML;
					btn.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="#4caf50" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>`;
					setTimeout(() => {
						btn.innerHTML = oldHtml;
					}, 1500);
				} catch (e) {
					// ignore
				}
			});
		});
	}

	document.addEventListener('DOMContentLoaded', initSponsorCopy);
	document.addEventListener('astro:page-load', initSponsorCopy);
</script>
